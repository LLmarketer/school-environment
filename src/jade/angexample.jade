include ../mixins/head
body(ng-controller="ExampleWeb")
  h2 Angular Example
  button.btn.btn-primary(type="button", ng-click="showList=!showList") Mostrar Lista
  div(ng-show="showList==true")
    ul.list-group
      li(ng-repeat="element in list.li") {{element}}
  h3 Input    
  input(type="text", ng-model="greet")
  p {{greet}} 
  
  script(type="text/ng-template" id="alert.html")
    .alert(style="background-color:#fa39c3;color:white" role="alert")
      div(ng-transclude)

  uib-alert(ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)") {{alert.msg}}
  uib-alert(template-url="alert.html") A happy alert!
  .btn.btn-default(type="button" ng-click="addAlert()") Add Alert
  include ../mixins/scripts
    
  
  
  
